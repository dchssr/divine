{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    // "moduleResolution": "node10",
    "allowJs": true,
    // "checkJs": true,
    // "outFile": "./",
    // "outDir": "./",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  }
}
